CREATE TABLE student_details (
 student_id NUMBER PRIMARY KEY,
 name VARCHAR2(50),
 created_at DATE
);

CREATE OR REPLACE TRIGGER trg_studentdetails_insert
BEFORE INSERT ON student_details
FOR EACH ROW
BEGIN
 :NEW.created_at := SYSDATE;
END;
/

SELECT object_name, object_type
FROM user_objects
WHERE object_name = UPPER('student_info');
INSERT INTO student_details (student_id, name) VALUES (1, 'Priya');

INSERT INTO student_details (student_id, name) VALUES (2, 'Karthik');
SELECT * FROM student_details;

CREATE OR REPLACE TRIGGER trg_check_marks
BEFORE INSERT OR UPDATE ON ss
FOR EACH ROW
BEGIN
 IF :NEW.marks < 0 THEN
 RAISE_APPLICATION_ERROR(-20001, 'Marks cannot be negative!');
 END IF;
END;
/

INSERT INTO ss VALUES (201, 'CSE', 50, 'test1@gmail.com');

INSERT INTO ss VALUES (202, 'ECE', -10, 'test2@gmail.com');

UPDATE student_details
SET name = 'Priya Sharma'
WHERE student_id = 1;
SELECT * FROM student_details;

DELETE FROM student_details
WHERE student_id = 2;
SELECT * FROM student_details;
DESC student_details;

SELECT * FROM student_details;
