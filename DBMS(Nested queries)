CREATE TABLE employeedata(
id INT PRIMARY KEY, 
name VARCHAR(25) NOT NULL, 
salary INT NOT NULL, 
role VARCHAR(15) NOT NULL);
INSERT INTO employeedata(id,name,salary,role) VALUES 
(1, 'Augustine Hammond', 10000, 'Developer'),
(2, 'Perice John', 10000, 'Manager'),
(3, 'Ragu Delafoy', 30000, 'Developer'),
(4, 'Teakwood Saffen', 40000, 'Manager'),
(5, 'Freddy Malcom', 50000, 'Developer');
select * FROM employeedata;


CREATE TABLE awards( 
id int PRIMARY KEY, 
employee_id INT NOT NULL,
award_date DATE NOT NULL );
INSERT INTO awards(id,employee_id,award_date)VALUES
(1, 1, '2022-04-01'),
(2, 3, '2022-05-01');
select * from awards;

SELECT id,name FROM employeedata WHERE id NOT IN(SELECT employee_id FROM awards);

SELECT*FROM employeedata WHERE role='Developer'AND salary > ALL(SELECT salary FROM employeedata WHERE role='Manager');

SELECT*FROM employeedata WHERE role='Developer'AND salary > ANY(SELECT salary FROM employeedata WHERE role='Manager');

SELECT*FROM employeedata emp1 WHERE salary > (SELECT AVG(salary) FROM employeedata emp2 WHERE emp1.role=emp2.role);

SELECT role,AVG(salary) FROM employeedata GROUP BY role;
